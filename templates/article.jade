
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  h3
    a(href=locals.url)= locals.name
  div.sociallink.small
    a(href="https://github.com/artema", class="fa fa-github")
    a(href="https://linkedin.com/in/artemabashev", class="fa fa-linkedin")    
    a(href="https://twitter.com/artemabashev", class="fa fa-twitter")
  h1= page.title

block content
  article.article
    section.content!= typogr(page.html).typogrify()
    hr
    section.post-comments
    div#disqus_thread
    script(type="text/javascript").
      var disqus_shortname = 'artemabashev';
      (function() {
          var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
          dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
          (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();

